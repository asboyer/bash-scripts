#!/usr/bin/env bash
tasks="/home/$USER/status/tasks.txt"
goal="/home/$USER/status/goal.txt"
DATE=`date +"%x"`
TIME=`date +"%r"`
HOUR=`date +"%H"`
clear
echo
if [ $HOUR -gt 18 ] || [ $HOUR -lt 1 ]; then
    echo Good evening, $USER!
elif [ $HOUR -lt 5 ]; then
	echo Good night, $USER! Get some sleep!
else
	if [[ $HOUR -gt 11 ]]; then
		echo Good afternoon, $USER!
	else
		echo Good morning, $USER!
	fi
fi
echo
echo Date: $DATE
echo Time: $TIME
echo
cal
if [ -f "$goal" ]; then
	g=`cat ~/status/goal.txt`
	echo
	echo A reminder that your goal is to \"$g\" 
	echo
else
	:	
fi
if [ -f "$tasks" ]; then
	echo Today\'s Tasks:
	echo "------------------"
    while IFS= read -r line
	do
		echo "[] $line"
	done < "$tasks"
	echo "------------------"
	echo
else 
	:
fi
