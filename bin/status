#!/usr/bin/env bash
tasks="/home/$USER/status/tasks.txt"
goal="/home/$USER/status/goal.txt"
DATE=`date +"%x"`
TIME=`date +"%r"`
HOUR=`date +"%H"`
if [[ $HOUR -gt 18 ]]
then
	clear
	echo
	echo Good evening, $USER!
else
	if [[ $HOUR -gt 11 ]]
	then
		clear
		echo
		echo Good afternoon, $USER!
	else
		clear
		echo
		echo Good morning, $USER!
	fi
fi
echo
echo Date: $DATE
echo Time: $TIME
echo
cal
if [ -f "$goal" ]; then
	g=`cat ~/status/goal.txt`
	echo
	echo A reminder that your goal is to \"$g\" 
	echo
else
	:	
fi
if [ -f "$tasks" ]; then
	echo Today\'s Tasks:
	echo "------------------"
    while IFS= read -r line
	do
		echo "$line"
	done < "$tasks"
	echo "------------------"
	echo
else 
	:
fi
