#!/usr/bin/env bash
input="/Users/$USER/tasks.txt"

clear

echo Good morning, $USER!
echo
echo Here is today\'s calander date:
echo
cal
if [ -f "$input" ]; then
	echo Today\'s Tasks:
	echo "------------------"
    while IFS= read -r line
	do
		echo "$line"
	done < "$input"
	echo "------------------"
	echo
else 
	echo
fi
