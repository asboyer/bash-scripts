#!/usr/bin/env bash

message=$1
branch=$2
remote=$3

# adds ALL changes
echo adding changes ...
git add .

# commits changes
echo commiting changes ...
if [ "$message" == "" ] 
then
	git commit -m "automated commit"
else
	git commit -m "$message"
fi

# pushes changes
echo pushing changes ...
if [ "$branch" == "" ]
then
	branch="master"
fi
if [ "$remote" == "" ]
then
	remote="origin"
fi
git push $remote $branch
